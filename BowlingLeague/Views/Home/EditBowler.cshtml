@{
    ViewData["Title"] = "Edit Bowler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Bowler

<form method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    @*Show the errors*@

    <h4>Add Bowler</h4>

    <input asp-for="BowlerID" type="hidden" />

    <div class="form-group">
        <label asp-for="BowlerFirstName">First Name:</label><input asp-for="BowlerFirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerMiddleInit">Middle Initial (If Applicable):</label><input asp-for="BowlerMiddleInit" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerLastName">Last Name:</label><input asp-for="BowlerLastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerAddress">Address:</label><input asp-for="BowlerAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerState">State:</label><input asp-for="BowlerState" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerCity">City:</label><input asp-for="BowlerCity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerZip">Zip Code:</label><input asp-for="BowlerZip" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BowlerPhoneNumber">Phone Number:</label><input asp-for="BowlerPhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TeamID">Team Name:</label>
        <select asp-for="TeamID">
            <option value="">Select Team</option>
            @foreach (Team t in ViewBag.Teams)
            {
                <option value="@t.TeamID">@t.TeamName</option>
            }
        </select>
    </div>
    @*Display the team name with each bowler in the list as well*@

    <div class="float-end">
        <input class="btn btn-info" type="submit" value="Save Bowler" />
    </div>
    @*Button to save the bowler*@

</form>
